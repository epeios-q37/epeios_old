# $Id$
mkdir workdir
cd workdir
export DIR=getbkdapi
GET=../../get_cvs

mkdir -p $DIR

$GET epeios $DIR stable/*.h
$GET epeios $DIR stable/*.cpp

$GET epeios $DIR documentation/licenses/gnu_gpl.txt
$GET epeios $DIR documentation/packages/getbkdapi/README.txt

$GET ebkd $DIR stable/*.h
$GET ebkd $DIR stable/*.cpp

#$GET ebkd $DIR apps/getbkdapi/*.h
$GET ebkd $DIR apps/getbkdapi/*.cpp
$GET ebkd $DIR apps/getbkdapi/Makefile
$GET ebkd $DIR apps/getbkdapi/CHANGELOG.txt

$GET exml $DIR stable/*.h
$GET exml $DIR stable/*.cpp

mv $DIR/CHANGELOG.txt $DIR/CHANGELOG
mv $DIR/gnu_gpl.txt $DIR/LICENSE
mv $DIR/README.txt $DIR/README

../../create_pkg $DIR