# $Id$
mkdir workdir
cd workdir
export DIR=ebkd_`date +%Y-%m-%d`

cvs -d:pserver:anonymous@cvs.epeios.org:/cvsroot/epeios login
cvs -z3 -d:pserver:anonymous@cvs.epeios.org:/cvsroot/epeios export -l -D today -d $DIR stable/
cvs -z3 -d:pserver:anonymous@cvs.epeios.org:/cvsroot/epeios export -l -D today -d $DIR documentation/licenses/gnu_gpl.txt
cvs -z3 -d:pserver:anonymous@cvs.epeios.org:/cvsroot/epeios export -l -D today -d $DIR documentation/packages/ebkd/README.txt
cvs -d:pserver:anonymous@cvs.epeios.org:/cvsroot/epeios logout

cvs -d:pserver:anonymous@cvs.ebkd.sourceforge.net:/cvsroot/ebkd login
cvs -z3 -d:pserver:anonymous@cvs.ebkd.sourceforge.net:/cvsroot/ebkd export -l -D today -d $DIR stable/
cvs -z3 -d:pserver:anonymous@cvs.ebkd.sourceforge.net:/cvsroot/ebkd export -l -D today -d $DIR devel/CHANGELOG.txt
cvs -d:pserver:anonymous@cvs.ebkd.sourceforge.net:/cvsroot/ebkd logout
mv $DIR/CHANGELOG.txt $DIR/CHANGELOG
mv $DIR/gnu_gpl.txt $DIR/LICENSE
mv $DIR/README.txt $DIR/README
rm $DIR/cgi.php
cp ~/website/libraries/ebkd/documentation/quickdoc/quickdoc.html $DIR
tar --gzip -cf $DIR.tar.gz $DIR
tar -c $DIR | bzip2 >$DIR.tar.bz2
zip -r -q $DIR.zip $DIR

