# $Id$
mkdir workdir
cd workdir
export DIR=ecgi-sources_`date +%Y-%m-%d`

cvs -d:pserver:anonymous@cvs.epeios.org:/cvsroot/epeios login
cvs -z3 -d:pserver:anonymous@cvs.epeios.org:/cvsroot/epeios export -l -D today -d $DIR stable/
cvs -z3 -d:pserver:anonymous@cvs.epeios.org:/cvsroot/epeios export -l -D today -d $DIR documentation/licenses/gnu_gpl.txt
cvs -z3 -d:pserver:anonymous@cvs.epeios.org:/cvsroot/epeios export -l -D today -d $DIR documentation/packages/ecgi/README.txt
cvs -d:pserver:anonymous@cvs.epeios.org:/cvsroot/epeios logout

cvs -d:pserver:anonymous@cvs.ecgi.sourceforge.net:/cvsroot/ecgi login
cvs -z3 -d:pserver:anonymous@cvs.ecgi.sourceforge.net:/cvsroot/ecgi export -l -D today -d $DIR stable/
cvs -z3 -d:pserver:anonymous@cvs.ecgi.sourceforge.net:/cvsroot/ecgi export -l -D today -d $DIR devel/CHANGELOG.txt
cvs -d:pserver:anonymous@cvs.ecgi.sourceforge.net:/cvsroot/ecgi logout
mv $DIR/CHANGELOG.txt $DIR/CHANGELOG
mv $DIR/gnu_gpl.txt $DIR/LICENSE
mv $DIR/README.txt $DIR/README
cp ~/website/libraries/ecgi/quickdoc/quickdoc.html $DIR
tar --gzip -cf $DIR.tar.gz $DIR
tar -c $DIR | bzip2 >$DIR.tar.bz2
zip -r -q $DIR.zip $DIR

