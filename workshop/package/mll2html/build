mkdir workdir
cd workdir
export DIR=mll2html
mkdir $DIR
GET=../../get_cvs

mkdir -p $DIR

$GET epeios $DIR stable/*.h
$GET epeios $DIR stable/*.cpp

#$GET epeios $DIR tools/mll2html/*.h
$GET epeios $DIR tools/mll2html/*.cpp
$GET epeios $DIR tools/mll2html/Makefile
$GET epeios $DIR tools/mll2html/mailinglists.txt
$GET epeios $DIR tools/mll2html/template.html
$GET epeios $DIR tools/mll2html/Makefile
$GET epeios $DIR tools/mll2html/CHANGELOG.txt

$GET epeios $DIR documentation/licenses/gnu_gpl.txt
$GET epeios $DIR documentation/packages/mll2html/README.txt

mv $DIR/CHANGELOG.txt $DIR/CHANGELOG
mv $DIR/gnu_gpl.txt $DIR/LICENSE
mv $DIR/README.txt $DIR/README

../../create_pkg $DIR