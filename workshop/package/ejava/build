# $Id$
mkdir workdir
cd workdir
export DIR=ejava-sources_`date +%Y-%m-%d`

cvs -d:pserver:anonymous@cvs.epeios.org:/cvsroot/epeios login
cvs -z3 -d:pserver:anonymous@cvs.epeios.org:/cvsroot/epeios export -l -D today -d $DIR documentation/licenses/gnu_gpl.txt
cvs -z3 -d:pserver:anonymous@cvs.epeios.org:/cvsroot/epeios export -l -D today -d $DIR documentation/packages/ejava/README.txt
cvs -d:pserver:anonymous@cvs.epeios.org:/cvsroot/epeios logout

cvs -d:pserver:anonymous@cvs.ejava.sourceforge.net:/cvsroot/ejava login
cvs -z3 -d:pserver:anonymous@cvs.ejava.sourceforge.net:/cvsroot/ejava export -l -D today -d $DIR libs/
cvs -z3 -d:pserver:anonymous@cvs.ejava.sourceforge.net:/cvsroot/ejava export -l -D today -d $DIR libs/CHANGELOG.txt
cvs -d:pserver:anonymous@cvs.ejava.sourceforge.net:/cvsroot/ejava logout
mv $DIR/CHANGELOG.txt $DIR/CHANGELOG
mv $DIR/gnu_gpl.txt $DIR/LICENSE
mv $DIR/README.txt $DIR/README
tar --gzip -cf $DIR.tar.gz $DIR
tar -c $DIR | bzip2 >$DIR.tar.bz2
zip -r -q $DIR.zip $DIR

