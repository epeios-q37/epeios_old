# $Id$
mkdir workdir
cd workdir
export DIR=etmccalc
GET=../../get_cvs

mkdir -p $DIR

$GET epeios $DIR stable/*.h
$GET epeios $DIR stable/*.cpp
$GET emth $DIR stable/*.h
$GET emth $DIR stable/*.cpp

$GET epeios $DIR documentation/licenses/gnu_gpl.txt
$GET epeios $DIR documentation/packages/$DIR/README.txt
$GET emth $DIR apps/$DIR/CHANGELOG.txt
$GET emth $DIR apps/$DIR/Makefile
$GET emth $DIR apps/$DIR/etmccalc.cpp
$GET emth $DIR apps/$DIR/Debug/etmccalc.exe

mv $DIR/CHANGELOG.txt $DIR/CHANGELOG
mv $DIR/gnu_gpl.txt $DIR/LICENSE
mv $DIR/README.txt $DIR/README

../../create_pkg $DIR
