# $Id$
rm -rf workdir
mkdir workdir
cd workdir
export DIR=emobdagecko
GET=../../../../../get_cvs

mkdir -p $DIR

$GET epeios $DIR documentation/licenses/gnu_gpl.txt
$GET epeios $DIR documentation/packages/emobdagecko/README.txt
$GET epeios $DIR apps/emobda/interface/frontend/Gecko/CHANGELOG.txt

mv $DIR/CHANGELOG.txt $DIR/CHANGELOG
mv $DIR/gnu_gpl.txt $DIR/LICENSE
mv $DIR/README.txt $DIR/README

mkdir $DIR/XPCOM

cp /cygdrive/h/xulrunner/components/emobdacom.dll $DIR/XPCOM
cp /cygdrive/h/xulrunner/components/iemobda.xpt $DIR/XPCOM

$GET epeios $DIR/XPCOM stable/*.h
$GET epeios $DIR/XPCOM stable/*.cpp

$GET ebkd $DIR/XPCOM stable/*.h
$GET ebkd $DIR/XPCOM stable/*.cpp

$GET epeios $DIR/XPCOM apps/emobda/interface/frontend/*.h
$GET epeios $DIR/XPCOM apps/emobda/interface/frontend/*.cpp

$GET epeios $DIR/XPCOM apps/emobda/interface/frontend/Gecko/XPCOM/*.h
$GET epeios $DIR/XPCOM apps/emobda/interface/frontend/Gecko/XPCOM/*.cpp
$GET epeios $DIR/XPCOM apps/emobda/interface/frontend/Gecko/XPCOM/*.idl
$GET epeios $DIR/XPCOM apps/emobda/interface/frontend/Gecko/XPCOM/Makefile

$GET epeios $DIR/XPCOM apps/emobda/interface/frontend/emobdafrd.xlc
mv $DIR/XPCOM/emobdafrd.xlc $DIR/XPCOM/emobdacom.xlc


mkdir $DIR/XUL
$GET epeios $DIR/XUL apps/emobda/interface/frontend/Gecko/XUL/application.ini

mkdir $DIR/XUL/chrome
$GET epeios $DIR/XUL/chrome apps/emobda/interface/frontend/Gecko/XUL/chrome/*.manifest

mkdir $DIR/XUL/chrome/emobda

mkdir $DIR/XUL/chrome/emobda/content
$GET epeios $DIR/XUL/chrome/emobda/content apps/emobda/interface/frontend/Gecko/XUL/chrome/emobda/content/*

mkdir $DIR/XUL/chrome/emobda/locale

mkdir $DIR/XUL/chrome/emobda/locale/en-US
$GET epeios $DIR/XUL/chrome/emobda/locale/en-US apps/emobda/interface/frontend/Gecko/XUL/chrome/emobda/locale/en-US/*


mkdir $DIR/XUL/chrome/emobda/locale/fr
$GET epeios $DIR/XUL/chrome/emobda/locale/fr apps/emobda/interface/frontend/Gecko/XUL/chrome/emobda/locale/fr/*

mkdir $DIR/XUL/defaults

mkdir $DIR/XUL/defaults/preferences
$GET epeios $DIR/XUL/defaults/preferences apps/emobda/interface/frontend/Gecko/XUL/defaults/preferences/debug.js
$GET epeios $DIR/XUL/defaults/preferences apps/emobda/interface/frontend/Gecko/XUL/defaults/preferences/prefs.js

../../../../../create_pkg $DIR