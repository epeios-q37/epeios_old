# $Id$
mkdir workdir
cd workdir
export DIR=expp
GET=../../get_cvs
export CLI=$DIR/CLI
export JAVA=$DIR/JAVA

mkdir -p $DIR
mkdir -p $DIR/epeios
mkdir -p $CLI
mkdir -p $JAVA

$GET epeios $DIR/epeios stable/*.h
$GET epeios $DIR/epeios stable/*.cpp

$GET epeios $DIR documentation/licenses/gnu_gpl.txt
$GET epeios $DIR documentation/packages/$DIR/README.txt
$GET epeios $DIR documentation/packages/$DIR/Directives.pdf
$GET epeios $DIR tools/$DIR/CHANGELOG.txt
$GET epeios $DIR documentation/packages/$DIR/Manual.pdf

$GET epeios $DIR tools/$DIR/*.h
# $GET epeios $DIR tools/$DIR/*.cpp

$GET epeios $CLI tools/$CLI/Makefile
$GET epeios $CLI tools/$CLI/*.cpp
$GET epeios $CLI tools/$CLI/*.h
expp h:/cvs/epeios/tools/$CLI/expp.xcfg >$CLI/expp.xcfg
expp h:/bin/expp.xlcl >$CLI/expp.xlcl
cp /cygdrive/h/bin/expp.exe $CLI

$GET epeios $JAVA tools/$JAVA/Makefile
$GET epeios $JAVA tools/$JAVA/*.cpp
cp /cygdrive/h/bin/jexpp.dll $JAVA

mkdir -p $JAVA/org/zeusw
$GET epeios $JAVA tools/$JAVA/*.java
$GET epeios $JAVA/org/zeusw tools/$JAVA/org/zeusw/*.java


$GET epeios $DIR tools/$DIR/Linux.xcf
$GET epeios $DIR tools/$DIR/Windows.xcf
$GET epeios $DIR tools/$DIR/common.xcf

$GET epeios $DIR tools/$DIR/villes.xml
$GET epeios $DIR tools/$DIR/Contacts.xml

mv $DIR/CHANGELOG.txt $DIR/CHANGELOG
mv $DIR/gnu_gpl.txt $DIR/LICENSE
mv $DIR/README.txt $DIR/README

../../create_pkg $DIR
