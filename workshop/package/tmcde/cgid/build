# $Id$

mkdir workdir
cd workdir
export DIR=tmcde-CGID-sources_`date +%Y-%m-%d`
cvs -d:pserver:anonymous@cvs.epeios.org:/cvsroot/epeios login
cvs -z3 -d:pserver:anonymous@cvs.epeios.org:/cvsroot/epeios export -l -D today -d $DIR stable/
cvs -z3 -d:pserver:anonymous@cvs.epeios.org:/cvsroot/epeios export -l -D today -d $DIR documentation/licenses/gnu_gpl.txt
cvs -z3 -d:pserver:anonymous@cvs.epeios.org:/cvsroot/epeios export -l -D today -d $DIR documentation/packages/tmcde/CGID/README.txt
cvs -d:pserver:anonymous@cvs.epeios.org:/cvsroot/epeios logout

cvs -d:pserver:anonymous@cvs.ecgi.sf.net:/cvsroot/ecgi login
cvs -z3 -d:pserver:anonymous@cvs.ecgi.sf.net:/cvsroot/ecgi export -l -D today -d $DIR stable/
cvs -d:pserver:anonymous@cvs.ecgi.sf.net:/cvsroot/ecgi logout

cvs -d:pserver:anonymous@cvs.ebkd.sf.net:/cvsroot/ebkd login
cvs -z3 -d:pserver:anonymous@cvs.ebkd.sf.net:/cvsroot/ebkd export -l -D today -d $DIR stable/
cvs -d:pserver:anonymous@cvs.ebkd.sf.net:/cvsroot/ebkd logout

cvs -d:pserver:anonymous@cvs.ehos.sf.net:/cvsroot/ehos login
cvs -z3 -d:pserver:anonymous@cvs.ehos.sf.net:/cvsroot/ehos export -l -D today -d $DIR stable/
cvs -d:pserver:anonymous@cvs.ehos.sf.net:/cvsroot/ehos logout

cvs -d:pserver:anonymous@cvs.etmc.sf.net:/cvsroot/etmc login
cvs -z3 -d:pserver:anonymous@cvs.etmc.sf.net:/cvsroot/etmc export -l -D today -d $DIR apps/CGID/
cvs -z3 -d:pserver:anonymous@cvs.etmc.sf.net:/cvsroot/etmc export -l -D today -d $DIR apps/CGID/XSL/
cvs -d:pserver:anonymous@cvs.etmc.sf.net:/cvsroot/etmc logout

mv $DIR/CHANGELOG.txt $DIR/CHANGELOG
mv $DIR/gnu_gpl.txt $DIR/LICENSE
mv $DIR/README.txt $DIR/README
rm $DIR/bkd4cpp.xsl
tar --gzip -cf $DIR.tar.gz $DIR
tar -c $DIR | bzip2 >$DIR.tar.bz2
zip -r -q $DIR.zip $DIR
