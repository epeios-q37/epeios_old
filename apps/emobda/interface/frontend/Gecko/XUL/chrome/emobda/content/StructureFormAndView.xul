<!DOCTYPE window SYSTEM "chrome://emobda/locale/StructureFormAndView.dtd">

<page
	id="pgeStructure"
	title="Structure view and form"
	xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
	xmlns:html="http://www.w3.org/1999/xhtml"
	onload="register( window );"
>
	<script type="text/javascript" src="emobda.js"/>
	<broadcasterset>
		<broadcaster id="bcrItemEdition"/>
		<broadcaster id="bcrItemBrowsing"/>
		
		<broadcaster id="bcrDatabaseModification" label="&databaseModify.label;" observes="bcrItemBrowsing"/>
		<broadcaster id="bcrDatabaseDeletion" label="&databaseDelete.label;" observes="bcrItemBrowsing"/>
		
		<broadcaster id="bcrTableCreation" label="&tableCreate.label;" observes="bcrItemBrowsing"/>
		<broadcaster id="bcrTableModification" label="&tableModify.label;" observes="bcrItemBrowsing"/>
		<broadcaster id="bcrTableDeletion" label="&tableDelete.label;" observes="bcrItemBrowsing"/>
		
		<broadcaster id="bcrFieldCreation" label="&fieldCreate.label;" observes="bcrItemBrowsing"/>
		<broadcaster id="bcrFieldModification" label="&fieldModify.label;" observes="bcrItemBrowsing"/>
		<broadcaster id="bcrFieldDeletion" label="&fieldDelete.label;" observes="bcrItemBrowsing"/>
	</broadcasterset>
	<commandset>
		<command id="cmdModifyDatabase" observes="bcrDatabaseModification"/>
		<command id="cmdDeleteDatabase" observes="bcrDatabaseDeletion"/>
		<command id="cmdCreateTable" observes="bcrTableCreation"/>
		<command id="cmdModifyTable" observes="bcrTableModification"/>
		<command id="cmdDeleteTable" observes="bcrTableDeletion"/>
		<command id="cmdCreateField" observes="bcrFieldCreation"/>
		<command id="cmdModifyField" observes="bcrFieldModification"/>
		<command id="cmdDeleteField" observes="bcrFieldDeletion"/>
		
		<command id="cmdApplyItem" label="&ok.label;" observes="bcrItemEdition"/>
		<command id="cmdCancelItem" label="&cancel.label;" observes="bcrItemEdition"/>
	</commandset>
	<hbox flex="1">
		<vbox flex="1">
			<groupbox flex="1">
				<vbox flex="1">
					<tree id="treBrowse" flex="1" hidecolumnpicker="true" seltype="single" observes="bcrItemBrowsing">
						<treecols>
							<treecol primary="true" label="&treeItemName.label;" flex="1"/>
							<treecol label="&treeItemId.label;"/>
						</treecols>
					  <treechildren id="tchItems"/>
					</tree>
					<deck id="itemActionDeck">
						<hbox id="databaseSelectionPanel" flex="1">
							<button command="cmdModifyDatabase" flex="1"/>
							<button command="cmdDeleteDatabase" flex="1"/>
							<button command="cmdCreateTable" flex="1"/>
						</hbox>
						<hbox id="tableSelectionPanel">
							<button command="cmdCreateTable" flex="1"/>
							<button command="cmdModifyTable" flex="1"/>
							<button command="cmdDeleteTable" flex="1"/>
							<button command="cmdCreateField" flex="1"/>
						</hbox>
						<hbox id="fieldSelectionPanel">
							<button command="cmdModifyField" flex="1"/>
							<button command="cmdDeleteField" flex="1"/>
							<button command="cmdCreateField" flex="1"/>
						</hbox>
					</deck>
				</vbox>
			</groupbox>
		</vbox>
		<splitter collapse="none" />
		<vbox flex="1">
			<groupbox flex="1">
				<vbox flex="1">
					<hbox flex="1">
						<vbox flex="1">
							<groupbox>
								<caption label="&name.label;"/>
								<textbox id="txbName" observes="bcrItemEdition"/>
							</groupbox>
							<groupbox>
								<caption label="&comment.label;"/>
								<textbox id="txbComment" multiline="true" observes="bcrItemEdition"/>
							</groupbox>
						</vbox>
					</hbox>
					<deck id="formDeck">
						<box id="tableFormPanel">
							<description>Table Form !</description>
						</box>
						<box id="fieldFormPanel">
							<description>Field Form !</description>
						</box>
					</deck>
					<hbox>
						<button command="cmdApplyItem"/>
						<button command="cmdCancelItem"/>
					</hbox>
				</vbox>
			</groupbox>
		</vbox>
	</hbox>
</page>
	
