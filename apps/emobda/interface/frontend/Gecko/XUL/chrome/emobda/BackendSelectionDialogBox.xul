<!-- $Id$ -->

<window
	id="wdwBackendSelectionDialogBox"
	title="Backend selection"
	persist="height width screenX screenY"
	xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
	xmlns:html="http://www.w3.org/1999/xhtml"
	onload="registerAlone( window );"
>
	<script type="text/javascript" src="emobda.js"/>
	
	<broadcasters>
		<broadcaster id="bcrBackendDefining"/>
		<broadcaster id="bcrLocal"/>
		<broadcaster id="bcrRemote"/>
	</broadcasters>
	<commands>
		<command id="cmdApply" label="|OK|" observes="bcrBackendDefining"/>
		<command id="cmdCancel" label="|Cancel|"/>
	</commands>
	<vbox flex="1">
		<radiogroup>
			<radio id="rdoLocal" label="Local"/>
			<radio id="rdoRemote" label="Remote"/>
			<label control="txbHostService" value="Remote backend host:port" type="autocomplete" autocompletesearch="history"/>
			<textbox id="txbHostService"/>
		</radiogroup>
		<hbox>
			<button command="cmdApply"/>
			<button command="cmdCancel"/>
		</hbox>
	</vbox>
</window>
	
