# $Id$

SRC=`pwd`
GFN=`basename $SRC`
DEST=../../stable

chmod +w $DEST/*
cp $SRC/$GFN.cpp $DEST
cp $SRC/$GFN.h $DEST
chmod -w $DEST/*

chmod +w $DEST/CVS

if ! grep -w -q $GFN $DEST/CVS/Entries; then
	cd $DEST;
	echo "Adding $GFN.h $GFN.cpp to CVS repository.";
	cvs add $GFN.h $GFN.cpp;
fi

cd $DEST
