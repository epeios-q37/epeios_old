ifeq ("$(EPEIOS_ENV)","gnu")
co := -c $(co)
ox = o
cc = g++ 
larg = $(lo) $(objs)
ds = :
endif

ifeq ("$(EPEIOS_ENV)","beos")
ox = o
cc = g++
ds = :
larg = $(lo) $(objs)
endif

vpath %.cpp $(subst $(ds),:,$(EPEIOS_SRC))

srcd = $(subst $(ds), ,$(EPEIOS_SRC))

co += $(copt) $(srcd:%=-I%) $(EPEIOS_COPT)
lo += $(EPEIOS_LOPT) $(lopt)

objs = $(name).$(ox) $(name)_test.$(ox) $(libs:=.$(ox))

$(name):  $(objs)
	$(cc) $(larg)
	
%.$(ox): %.cpp
	$(cc) $(co) $<
